<%= bootstrap_form_for(@endorsement, label_errors: true, :html => { :class => "form-horizontal" }) do |f| %>
 
  <div class="field">
   
    <%= f.text_field :firstname, placeholder: "Firstname"%>
  </div>
  <div class="field">
   
    <%= f.text_field :lastname, placeholder: "Lastname"%>
  </div>
  <div class="field">
    
   
	<%= f.select :category, ['Elected', 'Organization','Community Leader'] %>
  </div>
  <div class="field">
   
    <%= f.text_field :title, placeholder: "Title (optional)"%>
  </div>
  <div class="field">
   
    <%= f.text_field :organization, placeholder: "Organization (optional - unless this entry is for an Organization)"%>
  </div>
  <div class="field">
   
    <%= f.number_field :ranking ,placeholder: "Position will override the alpha order. 0 is highest."%>
  </div>
  <div class="actions pull-right">
    <%= f.submit %>
  </div>
<% end %>