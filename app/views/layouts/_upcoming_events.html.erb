<% if current_user %><div class="edit alert" >
 <i> <%= link_to ' Add a new event  ', new_event_path, class: "admin-edit fa fa-calendar", dismissible: true %> </i>
 
 <button class="close" data-dismiss="alert" type="button">
     <span aria-hidden="true">Ã—</span><span class="sr-only">Close</span>
   </button>
   
 </div>
 <% end %>
 
 <h2>Upcoming Events</h2>

    <% @futureevents.each do |event| %>
	<% unless @futureevents.blank? %>
     <div class="eventlist">
        <h4><%= link_to event.name, event  %></h4>
        <h5><%= event.start_time.strftime("%A %B %d - %l:%M %p") %></h5>
        <p class="event-location"><%= event.location %><br/><%= link_to 'More details', event%>
        
		
	</div>
	
	<% else %>
	<p>No events coming up - check back soon</p>
	<% end %>
	<% end %>