    <%= csrf_meta_tags %>
  </head>
  <body>
	  <div class="nav-wrapper">
	  
<nav class="navbar navbar-fixed-top">
<div class="container">
  <a class="navbar-brand hidden-lg-up logo" href="#"><%= image_tag 'logo200.png' %></a>
  <a class="navbar-brand hidden-md-down logo" href="#"><%= image_tag 'logo.png' %></a>
 <button class="navbar-toggler hidden-lg-up pull-right tog-menu" type="button" data-toggle="collapse" data-target="#exCollapsingNavbar2">
 <span class="sr-only">Toggle navigation</span>
 <i class="fa fa-bars "></i> Menu
 </button>
  <div class="collapse navbar-toggleable-md " id="exCollapsingNavbar2">
    
    <ul class="nav navbar-nav">
      <li class="nav-item hidden-lg-down">
        <%= link_to 'home', root_path, class:"nav-link"%>
      </li>
     
      <li class="nav-item">
        <%= link_to 'about', about_path, class:"nav-link"%>
      </li>
      <li class="nav-item">
        <%= link_to 'Endorsements', endorsements_path, class:"nav-link"%>
      </li>
      <li class="nav-item">
        <%= link_to 'News', news_index_path, class:"nav-link"%>
      </li>
      <li class="nav-item">
        <%= link_to 'Support Matt', '#', class:"nav-link"%>
      </li>
	  
      <li class="nav-item">
        <%= link_to 'Contact', '#', class:"nav-link"%>
      </li>
	  
      <li class="nav-item">
        <span class="contribute_nav"><%= link_to 'Donate', '#', class: 'btn btn-primary contribute', role: 'button', target: '_blank'%> </span>
		
		
      </li>
      
    </ul>
  </div>
</nav>
</div>
	 </div>
	 
<div class="page">	 
		
	
	
    <div class="container">
		<div class="page-frame">
			<%= yield :override %>
			<div class="row">
				<div class="col-sm-8">
     			   <%= yield %>
 	 			</div>
				<div class="col-sm-4">
     			   <%= yield :rh %>
 	 			</div>
			</div>
	  </div>	
    </div>
	
	

</div>
	<div class="footer">
		<div class="container">
		<% if current_user %>
		  Signed in as <%= current_user.name %> | <%= link_to "Logout", '/logout' %> | <%= link_to "Admin", admin_index_path %> <% if current_user.id == 1 %> || <%= link_to 'Add User', signup_path %><% end %>
		<% else %>
		  <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
		<% end %>
	</div>
</div>
	
	
   
  </body>
</html>


